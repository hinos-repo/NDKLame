<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="녹음만"
        android:onClick="onlyRecord"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="녹음만 중지"
        android:onClick="stopOnlyRecord"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PCM 듣기"
        android:onClick="playPCM"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PCM -> MP3 파일 변환"
        android:onClick="convertMp3"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="녹음과 동시에 MP3로 변경"
        android:onClick="recordWithConvertMp3"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MP3 -> PCM 파일 변환"
        android:onClick="convertPCM"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="변환된 PCM play"
        android:onClick="playConvertPCM"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AudioTrack으로 Byte 단위로 Mp3 플레이"
        android:onClick="playMp3Byte"
        />
</LinearLayout>